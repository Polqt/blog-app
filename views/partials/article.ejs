<div class="mx-auto mt-10 grid max-w-4xl grid-cols-1 gap-x-4 gap-y-12 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
    <% if (locals.exampleQuote) { %>
    <article class="max-w-sm relative flex-col items-start justify-between p-4 bg-white shadow-lg rounded-lg group">
        <div class="flex items-center gap-x-4 text-xs">
            <time datetime="2020-03-16" class="text-gray-500"><%= exampleQuote.date %></time>
        </div>
        <div class="group relative">
            <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                <a href="#"><span class="absolute inset-0"></span>
                    <%= exampleQuote.title %> 
                </a>
            </h3>
            <p class="mt-2 text-sm leading-6 text-gray-600">
                <%= exampleQuote.quote %> 
            </p>
        </div>
        <div class="relative mt-4 flex items-center gap-x-4">
            <img src="<%= exampleQuote.image %>" alt="" class="h-10 w-10 rounded-full bg-gray-50">
            <div class="text-sm leading-6">
                <p class="font-semibold text-gray-900">
                    <a href="#"><span class="absolute inset-0"></span>
                        <%= exampleQuote.author %> 
                    </a>
                </p>
            </div>
        </div>
    </article>
    <% } %>
    
    <% if (quotes.length > 0) { %>
        <% quotes.forEach(quote => { %>
            <article class="max-w-sm relative flex flex-col items-start justify-between p-4 bg-white shadow-lg rounded-lg group min-h-[200px]">
                <div class="flex items-center gap-x-4 text-xs">
                    <time datetime="2020-03-16" class="text-gray-500"><%= quote.date %></time>
                </div>
                <div class="group relative flex-1">
                    <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                        <a href="#"><span class="absolute inset-0"></span>
                            <%= quote.title %> 
                        </a>
                    </h3>
                    <p class="mt-2 text-sm leading-6 text-gray-600 line-clamp-6">
                        <%= quote.quote %> 
                    </p>
                </div>
                <div class="relative mt-4 flex items-center gap-x-4">
                    <img src="<%= quote.image %>" alt="" class="h-10 w-10 rounded-full bg-gray-50">
                    <div class="text-sm leading-6">
                        <p class="font-semibold text-gray-900">
                            <a href="#"><span class="absolute inset-0"></span>
                                <%= quote.author %> 
                            </a>
                        </p>
                    </div>
                </div>

                <div class="absolute inset-0 flex items-center justify-center bg-gray-900 bg-opacity-75 opacity-0 group-hover:opacity-100 transition-opacity">
                    <form action="/edit" method="GET">
                        <input type="hidden" name="id" value="<%= quote.id %>">
                        <button name="action" value="edit" class="text-white bg-blue-500 hover:bg-blue-600 px-4 py-2 rounded">Edit</button>
                    </form>
                    <form action="/delete" method="POST">
                        <input type="hidden" name="id" value="<%= quote.id %>">
                        <button name="action" value="delete" class="text-white bg-red-500 hover:bg-red-600 px-4 py-2 ml-2 rounded">Delete</button>
                    </form>
                </div>
            </article>
        <% }) %>
    <% } %>
</div>
