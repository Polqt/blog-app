<div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
    <% if (locals.exampleQuote) { %>
    <article class="flex max-w-xl flex-col items-start justify-between">
        <div class="flex items-center gap-x-4 text-xs">
            <time datetime="2020-03-16" class="text-gray-500"><%= exampleQuote.date %> </time>
            <a href="#" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100"><%= exampleQuote.category %> </a>
        </div>
        <div class="group relative">
            <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                <a href="#"><span class="absolute inset-0"></span>
                    <%= exampleQuote.title %> 
                </a>
            </h3>
            <p class="mt-5 text-sm leading-6 text-gray-600">
                <%= exampleQuote.quote %> 
            </p>
        </div>
        <div class="relative mt-6 flex items-center gap-x-4">
            <img src="<%= exampleQuote.image %>" alt="" class="h-10 w-10 rounded-full bg-gray-50">
            <div class="text-sm leading-6">
                <p class="font-semibold text-gray-900">
                    <a href=""><span class="absolute inset-0"></span>
                        <%= exampleQuote.author %> 
                    </a>
                </p>
                <p class="text-gray-600"><%= exampleQuote.profession %> </p>
            </div>
        </div>
        
    </article>
    <% } %>
</div>
